<% if user.errors %>
	<ul>
		<% user.errors.full_messages.each do |error| %>
		<li><%= error %></li>
		<% end %>
	</ul>

<% end %>



<%= form_for user do |f| %>
	<%= f.label :name %>
	<br>
	<%= f.text_field :name %>
	<br>
	<%= f.label :email %>
	<br>
	<%= f.text_field :email %>
	<br>
	<%= f.label :age %>
	<br>
	<%= f.text_field :age %>
	<br>
	<%= f.submit %>
<% end %>




