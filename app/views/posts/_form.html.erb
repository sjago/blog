<% if post.errors %>
	<ul>
		<% post.errors.full_messages.each do |error| %>
		<li><%= error %></li>
		<% end %>
	</ul>

<% end %>

<%= form_for post do |f| %>
	<%= f.label :title %>
	<br>
	<%= f.text_field :title %>
	<br>
	<%= f.label :content %>
	<br>
	<%= f.text_area :content, size: "60x12" %>
	<br>
	<%= f.collection_check_boxes(:category_ids, Category.all, :id, :name) do |cat|%>
    	<%= cat.label {cat.check_box() + cat.text } %>
    <%end%>
    <br>
	<%= f.submit %>
<% end %>